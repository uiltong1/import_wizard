#!/bin/sh

echo "üîç Verificando o nome da branch..."

BRANCH_NAME=$(git symbolic-ref --short HEAD)

echo "Nome da branch: $BRANCH_NAME"

PATTERN="^(feat|fix|hotfix)\/[A-Z0-9-]+$"

case "$BRANCH_NAME" in
  main|feat/*|fix/*|hotfix/*|chore/*) 
    echo "‚úÖ Nome da branch '$BRANCH_NAME' est√° correto."
    ;;
  *)
    echo "Erro: Nome da branch '$BRANCH_NAME' n√£o segue o padr√£o esperado."
    echo "Padr√£o esperado: 'feat/xxxx', 'fix/xxxx', 'chore/xxxx' ou 'hotfix/xxxx'."
    exit 1
    ;;
esac
